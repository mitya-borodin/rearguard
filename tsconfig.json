{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./",
    "strict": true,
    "module": "commonjs",
    "lib": ["es6", "webworker", "es7"],
    "moduleResolution": "node",
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "bin/**/*"]
}
